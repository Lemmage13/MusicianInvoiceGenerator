<Window x:Class="MusicianInvoiceGenerator.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicianInvoiceGenerator.Views"
        xmlns:vm="clr-namespace:MusicianInvoiceGenerator.ViewModels"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainMenuViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Content="View Invoices" Command="{Binding OpenInvoiceViewCmd}"/>
                <Button Grid.Column="0" Grid.Row="1" Content="New Invoice" Command="{Binding OpenMainWindowCmd}"/>
                <Button Grid.Column="0" Grid.Row="2" Content="View Contacts" Command="{Binding OpenContactsViewCmd}"/>
                <Button Grid.Column="1" Grid.Row="0" Content="Settings" Command="{Binding OpenSettingsCmd}"/>
                <Button Grid.Column="1" Grid.Row="2" Content="Exit"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
